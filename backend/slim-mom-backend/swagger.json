{
  "openapi": "3.0.0",
  "info": {
    "title": "Slimmom",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "noauthAuth": {
        "type": "http",
        "scheme": "noauth"
      }
    }
  },
  "paths": {
    "/api/users/signup": {
      "post": {
        "tags": [
          "default"
        ],
        "summary": "Signup",
        "description": "Use for sign up registration",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "name": "Example Name",
                  "email": "example@mail.com",
                  "password": "examplepassword"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": [
          "default"
        ],
        "summary": "Login",
        "description": "User login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "email": "example@mail.com",
                  "password": "examplepassword"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/logout": {
      "post": {
        "tags": [
          "default"
        ],
        "summary": "Logout",
        "description": "User logout",
        "requestBody": {
          "content": {}
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/current": {
      "get": {
        "tags": [
          "default"
        ],
        "summary": "Current",
        "description": "User current status or information",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/api/users/infouser": {
      "put": {
        "tags": [
          "default"
        ],
        "summary": "Infouser",
        "description": "Use for updating the summary of the user's calories and the list of non-recommended food",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "age": "18",
                  "bloodType": "3",
                  "currentWeight": "44",
                  "desiredWeight": "55",
                  "height": "156",
                  "dailyRate": 1274
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  }
